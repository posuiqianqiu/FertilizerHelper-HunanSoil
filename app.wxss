/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.btn-secondary {
  background: white;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
}

.btn-secondary:active {
  background: #f0f8f0;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4CAF50;
  outline: none;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 警告提示样式 */
.warning {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 8rpx 0;
  color: #856404;
  font-size: 26rpx;
}

.success {
  background: #d4edda;
  border: 2rpx solid #c3e6cb;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 8rpx 0;
  color: #155724;
  font-size: 26rpx;
}