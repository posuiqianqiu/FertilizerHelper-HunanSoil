/* 首页样式 */

.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-container {
  padding-bottom: 40rpx;
}

/* 选择器样式 */
.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 输入框错误状态 */
.input-error {
  border-color: #f44336 !important;
}

.error-text {
  color: #f44336;
  font-size: 24rpx;
  margin-top: 8rpx;
  display: block;
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  margin: 40rpx 0;
  font-size: 36rpx;
  padding: 32rpx;
}

/* 提示卡片 */
.tips-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.tips-content text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tips-content text:last-child {
  margin-bottom: 0;
}